<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ if .IsHome }}{{ .Site.Title }}{{ else }}{{ .Title }} - {{ .Site.Title }}{{ end }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }
        
        .container {
            display: flex;
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            min-height: 100vh;
        }
        
        /* Â§¥ÈÉ®Ê†∑Âºè */
        .header {
            background: #2c3e50;
            color: white;
            padding: 15px 0;
            border-bottom: 3px solid #e74c3c;
        }
        
        .nav-main {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #e74c3c;
        }
        
        .nav-links {
            display: flex;
            list-style: none;
        }
        
        .nav-links li {
            margin: 0 15px;
        }
        
        .nav-links a {
            color: white;
            text-decoration: none;
            padding: 5px 10px;
            border-radius: 3px;
            transition: background 0.3s;
        }
        
        .nav-links a:hover {
            background: #34495e;
        }
        
        .search-box {
            display: flex;
        }
        
        .search-box input {
            padding: 8px 12px;
            border: none;
            border-radius: 3px 0 0 3px;
            width: 250px;
        }
        
        .search-box button {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 0 3px 3px 0;
            cursor: pointer;
        }
        
        /* ‰æßËæπÊ†èÊ†∑Âºè */
        .sidebar {
            width: 280px;
            background: #34495e;
            color: white;
            min-height: calc(100vh - 80px);
            position: sticky;
            top: 0;
        }
        
        .sidebar-section {
            margin-bottom: 0;
        }
        
        .sidebar-title {
            background: #2c3e50;
            padding: 15px 20px;
            font-weight: bold;
            font-size: 16px;
            border-left: 4px solid #e74c3c;
            display: flex;
            justify-content: between;
            align-items: center;
        }
        
        .sidebar-title .arrow {
            font-size: 12px;
            transition: transform 0.3s;
        }
        
        .sidebar-links {
            list-style: none;
            max-height: 500px;
            overflow-y: auto;
        }
        
        .sidebar-links li {
            border-bottom: 1px solid #3c566e;
        }
        
        .sidebar-links a {
            display: block;
            padding: 12px 25px;
            color: #ecf0f1;
            text-decoration: none;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }
        
        .sidebar-links a:hover {
            background: #3c566e;
            padding-left: 30px;
            border-left-color: #e74c3c;
        }
        
        .sidebar-links .active {
            background: #3c566e;
            border-left: 3px solid #e74c3c;
        }
        
        .sidebar-links .submenu {
            list-style: none;
            background: #2c3e50;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        
        .sidebar-links .submenu.show {
            max-height: 500px;
        }
        
        .sidebar-links .submenu a {
            padding: 10px 25px 10px 40px;
            font-size: 14px;
            border-left: 2px solid #3498db;
        }
        
        .sidebar-links .submenu a:hover {
            background: #34495e;
            padding-left: 45px;
        }
        
        /* ÂÜÖÂÆπÂå∫ÂüüÊ†∑Âºè */
        .content {
            flex: 1;
            padding: 30px;
            min-height: calc(100vh - 80px);
        }
        
        .content-header {
            border-bottom: 2px solid #e74c3c;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }
        
        .content-header h1 {
            color: #2c3e50;
            font-size: 28px;
            margin-bottom: 10px;
        }
        
        .content-header .breadcrumb {
            color: #666;
            font-size: 14px;
        }
        
        .content-header .breadcrumb a {
            color: #3498db;
            text-decoration: none;
        }
        
        /* ÊïôÁ®ãÁΩëÊ†ºÊ†∑Âºè */
        .tutorial-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin: 30px 0;
        }
        
        .tutorial-card {
            background: white;
            border: 1px solid #e1e8ed;
            border-radius: 10px;
            padding: 25px;
            text-decoration: none;
            color: #333;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            display: block;
        }
        
        .tutorial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-color: #e74c3c;
            text-decoration: none;
            color: #333;
        }
        
        .tutorial-card h3 {
            color: #2c3e50;
            margin-bottom: 12px;
            font-size: 20px;
            display: flex;
            align-items: center;
        }
        
        .tutorial-card h3::before {
            content: "üìö";
            margin-right: 10px;
            font-size: 18px;
        }
        
        .tutorial-card p {
            color: #666;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
        }
        
        .tutorial-meta {
            display: flex;
            justify-content: space-between;
            color: #888;
            font-size: 12px;
            border-top: 1px solid #f0f0f0;
            padding-top: 12px;
        }
        
        /* ÊïôÁ®ãÁõÆÂΩïÊ†∑Âºè */
        .tutorial-toc {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 25px;
            margin: 30px 0;
        }
        
        .tutorial-toc h3 {
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 2px solid #e74c3c;
            padding-bottom: 10px;
            font-size: 20px;
        }
        
        .toc-list {
            list-style: none;
        }
        
        .toc-list li {
            padding: 12px 0;
            border-bottom: 1px solid #e9ecef;
            transition: background 0.3s;
        }
        
        .toc-list li:hover {
            background: white;
            padding-left: 10px;
        }
        
        .toc-list a {
            color: #2c3e50;
            text-decoration: none;
            display: flex;
            align-items: center;
            font-size: 15px;
        }
        
        .toc-list a:hover {
            color: #e74c3c;
        }
        
        .toc-list a::before {
            content: "üìñ";
            margin-right: 12px;
            font-size: 14px;
        }
        
        /* ÂìçÂ∫îÂºèËÆæËÆ° */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
                min-height: auto;
            }
            
            .tutorial-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <nav class="nav-main">
            <div class="logo">{{ .Site.Title }}</div>
            <ul class="nav-links">
                {{ range .Site.Menus.main }}
                <li><a href="{{ .URL }}">{{ .Name }}</a></li>
                {{ end }}
            </ul>
            <div class="search-box">
                <input type="text" placeholder="ÊêúÁ¥¢ÊïôÁ®ã...">
                <button>ÊêúÁ¥¢</button>
            </div>
        </nav>
    </header>
    
    <div class="container">
        {{ partial "sidebar.html" . }}
        
        <main class="content">
            {{ block "main" . }}{{ end }}
        </main>
    </div>

    <script>
        // ‰æßËæπÊ†èÊäòÂè†ÂäüËÉΩ
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarTitles = document.querySelectorAll('.sidebar-title');
            
            sidebarTitles.forEach(title => {
                title.addEventListener('click', function() {
                    const links = this.nextElementSibling;
                    const arrow = this.querySelector('.arrow');
                    
                    if (links.style.maxHeight && links.style.maxHeight !== '0px') {
                        links.style.maxHeight = '0px';
                        arrow.style.transform = 'rotate(0deg)';
                    } else {
                        links.style.maxHeight = links.scrollHeight + 'px';
                        arrow.style.transform = 'rotate(180deg)';
                    }
                });
            });

            // ÈªòËÆ§Â±ïÂºÄÁ¨¨‰∏Ä‰∏™ÂàÜÁ±ª
            const firstSection = document.querySelector('.sidebar-links');
            if (firstSection) {
                firstSection.style.maxHeight = firstSection.scrollHeight + 'px';
            }
        });
    </script>
</body>
</html>